<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ImageLocalisation"
        android:layout_width="258dp"
        android:layout_height="252dp"
        android:src="@drawable/localisationimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/txtbienvenue"
        android:layout_width="347dp"
        android:layout_height="94dp"
        android:fontFamily="@font/assistant_semibold"
        android:gravity="center"
        android:text="@string/MsgBienvenue"
        android:textColor="#C41F53"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageLocalisation"
        app:layout_constraintVertical_bias="0.112" />

    <TextView
        android:id="@+id/infosurdeveloppeurs"
        android:layout_width="265dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="@string/infodeveloppementapp"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtbienvenue"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/infoVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numversion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infosurdeveloppeurs"
        app:layout_constraintVertical_bias="0.777" />

</androidx.constraintlayout.widget.ConstraintLayout>
